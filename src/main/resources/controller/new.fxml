<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.GUI"
          prefHeight="200.0" prefWidth="400.0" vgap="8" hgap="10">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="Enter first number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id = "firstNumber" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Enter second number:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id = "secondNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button fx:id = "calculateSum" text="Compute Sum" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#pressLoginStudent" />


</GridPane>